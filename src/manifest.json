{
  "name": "CAPTCHA Your Attention",
  "description": "Stopping you from doomscrolling with CAPTCHAs",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": ["https://*.youtube.com/"],
  "content_scripts": [
    {
      "js": ["/content-scripts/main.js", "content-scripts/chrome-handler.js", "content-scripts/generate-captcha.js"],
      "matches": ["https://www.youtube.com/shorts/*"]
    }
  ],
  "background": {
    "service_worker": "service-workers/service-worker.js",
    "type": "module"
  },
  "permissions": ["activeTab", "storage"]
}
